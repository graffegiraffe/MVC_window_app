<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/javafx"
           fx:controller="by.rublevskaya.mvcapp.controller.StartController"
           style="-fx-background-color: linear-gradient(to bottom, #ffe4e1, #ffc0cb);">

    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="40">
            <ImageView fx:id="emblemImage"
                       fitWidth="150"
                       fitHeight="150"
                       preserveRatio="true"
                       pickOnBounds="true">
                <Image url="/img/pink-removebg-preview.png"/>
            </ImageView>

            <VBox alignment="CENTER" spacing="10">
                <Label text="Добро пожаловать в"
                       textFill="#ff69b4"
                       style="-fx-font-family: 'Arial'; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                <Label text="Футбольный клуб Катюши"
                       textFill="#ff1493"
                       style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 40px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 2, 2);"/>

                    <Button text="Продолжить"
                            fx:id="continueButton"
                            styleClass="fancy-button"
                            onAction="#onContinueButtonClick"/>
            </VBox>
        </HBox>
    </VBox>
</StackPane>